<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/contraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Trip details"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Be as accurate as possible, add comments, don't accept valuables and closed items!"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="You are travelling walking"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/textView3">

                <FrameLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_image"
                    android:padding="3dp">

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:button="empty" />

                    <ImageView
                        android:id="@+id/hh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:src="@mipmap/car" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_image"
                    android:padding="3dp">

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:button="empty" />

                    <ImageView
                        android:id="@+id/hh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:src="@mipmap/bus" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_image"
                    android:padding="3dp">

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:button="empty" />

                    <ImageView
                        android:id="@+id/hh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:src="@mipmap/train" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_image"
                    android:padding="3dp">

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:button="empty" />

                    <ImageView
                        android:id="@+id/hh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:src="@mipmap/truck" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/border_image"
                    android:padding="3dp">

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:button="empty" />

                    <ImageView
                        android:id="@+id/hh"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:src="@mipmap/airplane" />

                </FrameLayout>


            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:text="You are travelling from"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/radioGroup"
                app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

            <LinearLayout
                android:id="@+id/linear_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView4">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/country_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight=".5"
                    app:layout_constraintLeft_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <EditText
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:hint="From" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/cou5ntry_holder"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight=".5"
                    app:layout_constraintLeft_toRightOf="@id/country_holder"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <EditText
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:hint="add date" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_layout1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/country_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight=".5"
                    app:layout_constraintLeft_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <EditText
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:hint="To" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/cou5ntry_holder"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight=".5"
                    app:layout_constraintLeft_toRightOf="@id/country_holder"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <EditText
                        android:id="@+id/country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:hint="add date" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Item Voume is medium"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="0dp"

                    android:layout_weight="1"
                    android:orientation="vertical"

                    >

                    <FrameLayout
                        android:id="@+id/frr"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/border_image"
                        android:padding="3dp">

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:button="empty" />

                        <ImageView
                            android:id="@+id/hh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:src="@mipmap/car"
                            app:srcCompat="@mipmap/mail" />


                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="X small"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="0dp"

                    android:layout_weight="1"
                    android:orientation="vertical"

                    >

                    <FrameLayout
                        android:id="@+id/frr"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/border_image"
                        android:padding="3dp">

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:button="empty" />

                        <ImageView
                            android:id="@+id/hh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:src="@mipmap/car"
                            app:srcCompat="@mipmap/brief_case" />


                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="small"
                        android:textAlignment="center" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >

                    <FrameLayout
                        android:id="@+id/frr"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/border_image"
                        android:padding="3dp">

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:button="empty" />

                        <ImageView
                            android:id="@+id/hh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:src="@mipmap/car"
                            app:srcCompat="@mipmap/small_suitcase" />


                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="medium"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >

                    <FrameLayout
                        android:id="@+id/frr"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/border_image"
                        android:padding="3dp">

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:button="empty" />

                        <ImageView
                            android:id="@+id/hh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:src="@mipmap/car"
                            app:srcCompat="@mipmap/suitcase" />


                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="large"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"

                    >

                    <FrameLayout
                        android:id="@+id/frr"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/border_image"
                        android:padding="3dp">

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:button="empty" />

                        <ImageView
                            android:id="@+id/hh"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:src="@mipmap/car"
                            app:srcCompat="@mipmap/box" />


                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="X large"
                        android:textAlignment="center" />

                </LinearLayout>


            </RadioGroup>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintTop_toBottomOf="@id/radioGroup2"
                tools:layout_editor_absoluteX="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight=".5"
                    android:text="Maximum weight"


                    android:textAlignment="viewStart"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/ddsf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight=".5" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                tools:text="Observations" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Write any observations concerning your trip."
                android:inputType="text"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <Button
                android:id="@+id/post_trip_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="post trip"
                app:layout_constraintTop_toBottomOf="@id/editText"
                app:layout_constraintLeft_toLeftOf="@id/editText"
                />

            <Button
                android:id="@+id/cancel_trip_button"
                Of="@id/post_trip_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_weight="1"
                android:text="cancel"
                app:layout_constraintLeft_toRightOf=""
                app:layout_constraintStart_toEndOf="@+id/post_trip_button"
                app:layout_constraintTop_toBottomOf="@id/editText" />

        </android.support.constraint.ConstraintLayout>

        <!-- padding scroll view -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:orientation="vertical">


        </LinearLayout>
    </LinearLayout>

</ScrollView>